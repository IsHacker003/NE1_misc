<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:id="@id/entity_header"
              android:paddingTop="24.0dp"
              android:paddingBottom="24.0dp"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              style="@style/EntityHeader" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout android:orientation="horizontal"
                android:id="@id/entity_header_content"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:paddingStart="56.0dp">
    <ImageView android:layout_gravity="center_horizontal"
               android:id="@id/entity_header_icon"
               android:layout_width="48.0dp"
               android:layout_height="48.0dp"
               android:antialias="true"
               android:scaleType="fitCenter" />
    <LinearLayout android:layout_gravity="center_vertical"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:paddingStart="16.0dp"
                  android:paddingEnd="16.0dp">
      <TextView android:ellipsize="marquee"
                android:gravity="start"
                android:id="@id/entity_header_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:textDirection="locale"
                style="@style/TextAppearance.EntityHeaderTitle" />
      <TextView android:id="@id/install_type"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.EntityHeaderSummary" />
      <TextView android:id="@id/entity_header_summary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.EntityHeaderSummary" />
      <TextView android:id="@id/entity_header_second_summary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.EntityHeaderSummary" />
    </LinearLayout>
  </LinearLayout>
  <LinearLayout android:orientation="vertical"
                android:id="@id/entity_header_links"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">
    <ImageButton android:id="@android:id/button1"
                 android:layout_width="wrap_content"
                 android:layout_height="0.0dp"
                 android:src="@null"
                 android:tint="?android:attr/colorAccent"
                 android:minWidth="@dimen/min_tap_target_size"
                 android:layout_weight="1.0"
                 style="?android:attr/actionOverflowButtonStyle" />
    <ImageButton android:id="@android:id/button2"
                 android:layout_width="wrap_content"
                 android:layout_height="0.0dp"
                 android:src="@null"
                 android:tint="?android:attr/colorAccent"
                 android:minWidth="@dimen/min_tap_target_size"
                 android:layout_weight="1.0"
                 style="?android:attr/actionOverflowButtonStyle" />
  </LinearLayout>
</LinearLayout>