<?xml version='1.0' encoding='utf-8' ?>
<PreferenceScreen android:title="@string/power_usage_summary_title"
                  android:key="power_usage_summary_screen"
                  settings:keywords="@string/keywords_battery" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res-auto">
  <com.android.settings.applications.LayoutPreference android:layout="@layout/battery_header"
                        android:selectable="false"
                        android:key="battery_header" />
  <PreferenceCategory android:layout="@layout/preference_category_no_title"
                      android:key="battery_tip" />
  <SwitchPreference android:title="@string/bg_power_saving_title"
                    android:key="background_power_saving" />
  <Preference android:title="@string/battery_saver"
              android:key="battery_saver_summary"
              android:fragment="com.android.settings.fuelgauge.batterysaver.BatterySaverSettings"
              settings:allowDividerAbove="true"
              settings:controller="com.android.settings.fuelgauge.BatterySaverController"
              settings:platform_slice="true" />
  <Preference android:title="@string/smart_battery_manager_title"
              android:key="smart_battery_manager"
              android:fragment="com.android.settings.fuelgauge.SmartBatterySettings"
              settings:controller="com.android.settings.fuelgauge.batterytip.BatteryManagerPreferenceController" />
  <SwitchPreference android:title="@string/battery_percentage"
                    android:key="battery_percentage"
                    android:summary="@string/battery_percentage_description" />
  <SwitchPreference android:title="@string/poweroff_animation_title"
                    android:key="poweroff_animation"
                    android:summary="@string/poweroff_animation_summary" />
  <com.android.settings.fuelgauge.PowerGaugePreference android:title="@string/battery_last_full_charge"
                        android:selectable="false"
                        android:key="last_full_charge"
                        settings:allowDividerAbove="true" />
  <com.android.settings.fuelgauge.PowerGaugePreference android:title="@string/device_screen_usage"
                        android:selectable="false"
                        android:key="screen_usage" />
</PreferenceScreen>