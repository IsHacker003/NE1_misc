<?xml version='1.0' encoding='utf-8' ?>
<com.android.setupwizardlib.GlifLayout android:id="@id/setup_wizard_layout"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      app:suwFooter="@layout/fingerprint_enroll_enrolling_base_footer"
                      style="?attr/fingerprint_layout_theme" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
  <LinearLayout android:orientation="vertical"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                style="@style/SuwContentFrame">
    <FrameLayout android:layout_width="fill_parent"
                 android:layout_height="wrap_content">
      <TextView android:id="@id/start_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/security_settings_fingerprint_enroll_start_message"
                android:minLines="3"
                style="@style/SuwDescription.Glif" />
      <TextView android:id="@id/repeat_message"
                android:visibility="invisible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/security_settings_fingerprint_enroll_repeat_message"
                android:minLines="3"
                style="@style/SuwDescription.Glif" />
    </FrameLayout>
    <LinearLayout android:gravity="center"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="0.0dp"
                  android:layout_weight="1.0">
      <com.android.setupwizardlib.view.FillContentLayout android:paddingTop="0.0dp"
                            android:paddingBottom="0.0dp"
                            android:layout_width="@dimen/fingerprint_progress_bar_max_size"
                            android:layout_height="@dimen/fingerprint_progress_bar_max_size"
                            android:layout_marginVertical="24.0dp">
        <include android:layout_gravity="center"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 layout="@layout/fingerprint_enroll_enrolling_content" />
      </com.android.setupwizardlib.view.FillContentLayout>
      <TextView android:gravity="center"
                android:layout_gravity="bottom|center"
                android:id="@id/error_text"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:accessibilityLiveRegion="polite"
                style="@style/TextAppearance.FingerprintErrorText" />
    </LinearLayout>
  </LinearLayout>
</com.android.setupwizardlib.GlifLayout>