<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:background="?android:attr/selectableItemBackground"
              android:paddingTop="6.0dp"
              android:paddingBottom="6.0dp"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingStart="?android:attr/listPreferredItemPaddingStart"
              android:paddingEnd="?android:attr/listPreferredItemPaddingEnd" xmlns:android="http://schemas.android.com/apk/res/android">
  <RelativeLayout android:layout_width="fill_parent"
                  android:layout_height="@android:dimen/status_bar_icon_size"
                  android:layout_marginBottom="6.0dp">
    <ImageView android:id="@id/icon"
               android:layout_width="@android:dimen/status_bar_icon_size"
               android:layout_height="@android:dimen/status_bar_icon_size"
               android:scaleType="fitCenter"
               android:adjustViewBounds="true"
               android:maxWidth="@android:dimen/status_bar_icon_size"
               android:maxHeight="@android:dimen/status_bar_icon_size"
               android:tint="?android:attr/textColorPrimary"
               android:layout_centerVertical="true"
               android:contentDescription="@null"
               android:layout_marginStart="0.0dp"
               android:layout_marginEnd="8.0dp"
               android:layout_toEndOf="@id/pkgicon" />
    <TextView android:textAppearance="?android:attr/textAppearanceSmall"
              android:textStyle="bold"
              android:textColor="?android:attr/textColorPrimary"
              android:ellipsize="end"
              android:id="@id/title"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:singleLine="true"
              android:layout_centerVertical="true"
              android:textAlignment="viewStart"
              android:layout_toStartOf="@id/timestamp"
              android:layout_toEndOf="@id/icon"
              android:labelFor="@android:id/button2" />
    <DateTimeView android:textAppearance="?android:attr/textAppearanceSmall"
                  android:textColor="?android:attr/textColorPrimary"
                  android:ellipsize="end"
                  android:id="@id/timestamp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:singleLine="true"
                  android:layout_alignTop="@android:id/widget_frame"
                  android:layout_alignBottom="@android:id/widget_frame"
                  android:layout_centerVertical="true"
                  android:textAlignment="viewEnd"
                  android:layout_alignParentEnd="true" />
  </RelativeLayout>
  <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="@android:dimen/status_bar_icon_size"
                android:layout_marginBottom="6.0dp"
                android:layout_marginStart="30.0dp">
    <ImageView android:id="@id/pkgicon"
               android:layout_width="@android:dimen/status_bar_icon_size"
               android:layout_height="@android:dimen/status_bar_icon_size"
               android:scaleType="fitCenter"
               android:adjustViewBounds="true"
               android:maxWidth="@android:dimen/status_bar_icon_size"
               android:maxHeight="@android:dimen/status_bar_icon_size"
               android:contentDescription="@null"
               android:layout_marginStart="0.0dp"
               android:layout_marginEnd="6.0dp" />
    <TextView android:textAppearance="?android:attr/textAppearanceSmall"
              android:textColor="?android:attr/textColorPrimary"
              android:ellipsize="end"
              android:layout_gravity="center|left"
              android:id="@id/pkgname"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:singleLine="true"
              android:textAlignment="viewStart" />
  </LinearLayout>
  <TextView android:textSize="10.0sp"
            android:textColor="?android:attr/textColorPrimary"
            android:orientation="horizontal"
            android:id="@id/extra"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6.0dp"
            android:singleLine="false"
            android:fontFamily="monospace"
            android:textAlignment="viewStart"
            android:layout_marginStart="30.0dp" />
</LinearLayout>