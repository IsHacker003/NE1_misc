<?xml version='1.0' encoding='utf-8' ?>
<ScrollView android:scrollbarStyle="outsideOverlay"
            android:gravity="top"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textDirection="locale" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16.0dp"
                android:paddingEnd="16.0dp">
    <TextView android:textAppearance="?android:attr/textAppearanceMedium"
              android:id="@id/encryption_warning"
              android:padding="10.0dp"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textAlignment="viewStart" />
    <TextView android:textAppearance="?android:attr/textAppearanceMedium"
              android:id="@id/capabilities_header"
              android:padding="10.0dp"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textAlignment="viewStart" />
    <LinearLayout android:orientation="vertical"
                  android:id="@id/capabilities"
                  android:padding="10.0dp"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content" />
  </LinearLayout>
</ScrollView>