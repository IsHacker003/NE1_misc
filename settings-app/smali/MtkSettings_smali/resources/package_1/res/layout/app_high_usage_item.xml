            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingEnd="7.0dp"
            android:layout_marginStart="24.0dp"
            android:layout_toStartOf="@id/app_screen_time"
            android:layout_toEndOf="@id/app_icon" />
  <TextView android:textColor="?android:attr/textColorPrimary"
            android:layout_gravity="center_vertical"
            android:id="@id/app_screen_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAlignment="viewEnd"
            android:paddingEnd="16.0dp"
            android:layout_alignParentEnd="true" />
</RelativeLayout>