<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:gravity="center_vertical"
              android:orientation="vertical"
              android:background="?android:attr/selectableItemBackground"
              android:paddingTop="16.0dp"
              android:paddingBottom="16.0dp"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:minHeight="?android:attr/listPreferredItemHeightSmall"
              android:paddingStart="@dimen/preference_no_icon_padding_start"
              android:paddingEnd="?android:attr/listPreferredItemPaddingEnd" xmlns:android="http://schemas.android.com/apk/res/android">
  <TextView android:textAppearance="@android:style/TextAppearance.Material.Subhead"
            android:textSize="36.0sp"
            android:textColor="?android:attr/colorAccent"
            android:ellipsize="marquee"
            android:id="@android:id/title"
            android:fadingEdge="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:fontFamily="@android:string/config_helpPackageNameKey"
            android:textAlignment="viewStart" />
  <TextView android:textAppearance="@android:style/TextAppearance.Material.Body1"
            android:id="@android:id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="10"
            android:textAlignment="viewStart" />
  <ProgressBar android:id="@android:id/progress"
               android:visibility="gone"
               android:layout_width="fill_parent"
               android:layout_height="8.0dp"
               android:layout_marginTop="16.0dp"
               android:layout_marginBottom="8.0dp"
               android:max="100"
               style="?android:attr/progressBarStyleHorizontal" />
</LinearLayout>