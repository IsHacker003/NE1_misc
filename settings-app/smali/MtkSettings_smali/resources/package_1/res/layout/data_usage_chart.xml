<?xml version='1.0' encoding='utf-8' ?>
<com.android.settings.widget.ChartDataUsageView android:id="@id/chart"
                      android:paddingTop="16.0dp"
                      android:paddingBottom="24.0dp"
                      android:layout_width="fill_parent"
                      android:layout_height="@dimen/data_usage_chart_height"
                      android:paddingStart="?android:attr/listPreferredItemPaddingStart"
                      android:paddingEnd="?android:attr/listPreferredItemPaddingEnd" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">
  <com.android.settings.widget.ChartGridView android:textAppearance="@android:style/TextAppearance.Material.Caption"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_gravity="bottom|center|start"
                        android:id="@id/grid"
                        android:paddingBottom="24.0dp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        settings:borderDrawable="@drawable/data_grid_border" />
  <com.android.settings.widget.ChartNetworkSeriesView android:layout_gravity="bottom|center|start"
                        android:id="@id/series"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        settings:fillColor="?android:attr/colorAccent"
                        settings:fillColorSecondary="#ff80cbc4"
                        settings:safeRegion="3.0dp"
                        settings:strokeColor="#00000000" />
  <com.android.settings.widget.ChartNetworkSeriesView android:layout_gravity="bottom|center|start"
                        android:id="@id/detail_series"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        settings:fillColor="?android:attr/colorAccent"
                        settings:fillColorSecondary="?android:attr/colorAccent"
                        settings:safeRegion="3.0dp"
                        settings:strokeColor="#00000000" />
  <com.android.settings.widget.ChartSweepView android:id="@id/sweep_warning"
                        android:nextFocusUp="@id/sweep_limit"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        settings:followAxis="vertical"
                        settings:labelColor="?android:attr/textColorSecondary"
                        settings:labelSize="60.0dp"
                        settings:labelTemplate="@string/data_usage_sweep_warning"
                        settings:neighborMargin="5.0dp"
                        settings:safeRegion="4.0dp"
                        settings:sweepDrawable="@drawable/data_sweep_warning" />
  <com.android.settings.widget.ChartSweepView android:id="@id/sweep_limit"
                        android:nextFocusDown="@id/sweep_warning"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        settings:followAxis="vertical"
                        settings:labelColor="?android:attr/colorError"
                        settings:labelSize="60.0dp"
                        settings:labelTemplate="@string/data_usage_sweep_limit"
                        settings:neighborMargin="5.0dp"
                        settings:safeRegion="4.0dp"
                        settings:sweepDrawable="@drawable/data_sweep_limit" />
</com.android.settings.widget.ChartDataUsageView>